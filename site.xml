<?xml version="1.0" encoding="UTF-8"?>
<site>

    <!-- extra attributes -->
    <attributes>
        <attribute>quiqqer.meta.site.title</attribute>
        <attribute>quiqqer.meta.site.index</attribute>
        <attribute>quiqqer.meta.site.keywords</attribute>
        <attribute>quiqqer.meta.site.description</attribute>
    </attributes>

    <!-- global site settings -->
    <settings>

        <category name="blog-list-settings">
            <settings>
                <title>
                    <locale group="quiqqer/meta" var="quiqqer.meta.settings.title" />
                </title>

                <input conf="quiqqer.meta.site.title">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.title" />
                    </text>
                </input>

                <select conf="quiqqer.meta.site.index">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index" />
                    </text>

                    <option value="index">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.index" />
                    </option>
                    <option value="noindex">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.noindex" />
                    </option>
                    <option value="nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.nofollow" />
                    </option>
                    <option value="nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.nofollow" />
                    </option>
                    <option value="noindex, nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.noindex_nofollow" />
                    </option>
                    <option value="all">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.index.all" />
                    </option>

                </select>

                <input conf="quiqqer.meta.site.keywords">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.keywords" />
                    </text>
                </input>
            </settings>
        </category>

    </settings>

</site>
