<?xml version="1.0" encoding="UTF-8"?>
<site>

    <!-- extra attributes -->
    <attributes>
        <attribute>quiqqer.meta.site.title</attribute>
        <attribute>quiqqer.meta.site.robots</attribute>
        <attribute>quiqqer.meta.site.keywords</attribute>
        <attribute>quiqqer.meta.site.description</attribute>
    </attributes>

    <!-- global site settings -->
    <settings>

        <category name="meta-settings">
            <settings require="" name="meta-settings-permalink">
                <title>
                    <locale group="quiqqer/meta" var="quiqqer.permalink.settings.title"/>
                </title>

                <input conf="quiqqer.package.meta.permalink" data-qui="package/quiqqer/meta/bin/permalink/Input">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.package.meta.permalink"/>
                    </text>
                    <description>
                        <locale group="quiqqer/meta" var="quiqqer.package.meta.permalink.description"/>
                    </description>
                </input>
            </settings>

            <settings name="meta-settings-seo">
                <title>
                    <locale group="quiqqer/meta" var="quiqqer.meta.settings.title"/>
                </title>

                <select conf="quiqqer.meta.site.robots">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots"/>
                    </text>

                    <option value="index">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.index"/>
                    </option>
                    <option value="noindex">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.noindex"/>
                    </option>
                    <option value="nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.nofollow"/>
                    </option>
                    <option value="nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.nofollow"/>
                    </option>
                    <option value="noindex, nofollow">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.noindex_nofollow"/>
                    </option>
                    <option value="all">
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.robots.all"/>
                    </option>
                </select>

                <input conf="quiqqer.meta.site.title">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.title"/>
                    </text>
                </input>

                <input conf="quiqqer.meta.site.keywords">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.keywords"/>
                    </text>
                </input>

                <textarea conf="quiqqer.meta.site.description" data-qui="package/quiqqer/meta/bin/seo/Description">
                    <text>
                        <locale group="quiqqer/meta" var="quiqqer.meta.site.description"/>
                    </text>
                </textarea>

            </settings>
        </category>

    </settings>

</site>
